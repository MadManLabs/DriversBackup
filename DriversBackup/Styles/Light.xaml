<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Color palette for light theme -->
    <Color x:Key="PageBackgroundColor">WhiteSmoke</Color>
    <Color x:Key="ButtonBackgroundColor">#F0F0F0</Color>
    <SolidColorBrush x:Key="ButtonBgBrush" Color="{StaticResource ButtonBackgroundColor}"/>
    <Color x:Key="PageForegroundColor">Black</Color>
    <SolidColorBrush x:Key="PageFgBrush" Color="{StaticResource PageForegroundColor}"/>
    <Color x:Key="ButtonBgColor">#F0F0F0</Color>
    <Color x:Key="ButtonMouseOverColor">#168EBD</Color>
    
    <!-- Progress bar colors-->
    <SolidColorBrush x:Key="ProgressBar.Background" Color="#E6E6E6"/>
    <SolidColorBrush x:Key="ProgressBar.Border" Color="#E6E6E6"/>

    <!-- CheckBox colors-->
    <SolidColorBrush x:Key="OptionMark.Static.Background" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="OptionMark.Static.Border" Color="#FF707070"/>
    <SolidColorBrush x:Key="OptionMark.Disabled.Background" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="OptionMark.Disabled.Border" Color="#FFBCBCBC"/>
    <SolidColorBrush x:Key="OptionMark.Pressed.Background" Color="#FFD9ECFF"/>

</ResourceDictionary>